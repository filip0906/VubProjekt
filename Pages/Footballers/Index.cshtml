@page
@model VubProjekt.Pages_Footballers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Igrači</h1>
<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="from-actions no-color">
        <p>
            Traži po poziciji:
            <input type="text" name="SearchString" value="@Model.CurrentFilter"/>
            <input type="submit" value="Search" class="btn btn-primary" />
            <a asp-page="./Index">Povratak na tablicu</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].FristName)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                @Html.DisplayNameFor(model => model.Footballer[0].LastName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.PositionSort">
                @Html.DisplayNameFor(model => model.Footballer[0].Position)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footballer[0].MarketValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Footballer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FristName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketValue)<p>Eur</p>
                
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
